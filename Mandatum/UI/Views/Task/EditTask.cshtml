@model TaskViewModel

<div id="page-wrapper">
<section id="header" class="wrapper">
		@await Html.PartialAsync("NavBarPartial")
</section>

<section id="main" class="wrapper style2">
	<div class="title">Задача</div>
	<div class="container">
		<div class="align-center">
			@if (Model.Method == "CreateTask")
			{
				<form asp-action="SaveTask" asp-route-boardId="@Model.BoardId" method="post" enctype="multipart/form-data" class="p-2">
					@await Html.PartialAsync("TaskFormPartial", Model.TaskModel)
					<div class="align-center">
						<button class="button" type="submit">Сохранить</button>
						<a asp-action="CancelTask" asp-route-boardId="@Model.BoardId" class="actions grey">Отмена</a>
					</div>
				</form>

			}
			@if (Model.Method == "EditTask")
			{
				<form asp-action="UpdateTask" asp-route-boardId="@Model.BoardId" method="post" enctype="multipart/form-data" class="p-2">
					@await Html.PartialAsync("TaskFormPartial", Model.TaskModel)
					<div class="align-center">
                    	<button class="button" type="submit">Редактировать</button>
                    	<a asp-action="CancelTask" asp-route-boardId="@Model.BoardId" class="actions grey">Отмена</a>
                    </div>
				</form>
			}
		</div>
    </div>
</section>
</div>



