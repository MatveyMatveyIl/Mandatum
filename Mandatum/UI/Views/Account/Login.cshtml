@model Mandatum.ViewModels.LoginModel
 

<div id="page-wrapper">
    <section id="header" class="wrapper">
        @await Html.PartialAsync("NavBarPartial")
    </section>
    
    <section id="main" class="wrapper style2">
        <div class="title">Вход</div>
        
        <div class="container">
            <div class="row aln-center">
                
                <form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
                    <div class="validation" asp-validation-summary="ModelOnly"></div>
                    <div>
                        <div class="form-group">
                            <label asp-for="Email">Введите Email</label>
                            <input type="text" asp-for="Email"/>
                            <span asp-validation-for="Email"/>
                        </div>
                        <div class="form-group">
                            <label asp-for="Password">Введите пароль</label>
                            <input asp-for="Password"/>
                            <span asp-validation-for="Password"/>
                        </div>
                        <br>
                        <div class="row aln-center">
                            <div>
                                   <input type="submit" value="Войти в аккаунт" class="button"/>
                            </div>
                        </div>
                        <div>
                            <label>или</label>
                        </div>
                        <div>
                             <a asp-action="GoogleLogin" asp-controller="Account">Войти через Google</a>
                        </div>
                        <div>
                            <a asp-action="Register" asp-controller="Account">Зарегестрироваться</a>
                        </div>
                        <div>
                            <a asp-action="GithubLogin" asp-controller="Account">Войти через Git</a>
                        </div>
                        
                       
                    </div>
                </form>
            </div>
        </div>
    </section>
</div>
