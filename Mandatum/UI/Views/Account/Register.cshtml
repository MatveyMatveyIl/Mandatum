@model Mandatum.ViewModels.RegisterModel
 

<div id="page-wrapper">
    <section id="header" class="wrapper">
        @await Html.PartialAsync("NavBarPartial")
    </section>
    
    <section id="main" class="wrapper style2">
        <div class="title">Регистрация</div>
        
        <div class="container">
            <div class="row aln-center">
                <form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
                    <div class="validation" asp-validation-summary="ModelOnly"></div>
                    <div>
                        <div class="form-group">
                            <label asp-for="Email">Введите Email</label>
                            <span asp-validation-for="Email" class="label error"></span>
                            <input type="text" asp-for="Email"/>
                        </div>
                        <div class="form-group">
                            <label asp-for="Password">Введите пароль</label>
                            <span asp-validation-for="Password" class="label error"></span>
                            <input asp-for="Password"/>
                        </div>
                        <div class="form-group">
                            <label asp-for="ConfirmPassword">Повторите пароль</label>
                            <span asp-validation-for="ConfirmPassword" class="label error"></span>
                            <input asp-for="ConfirmPassword"/>
                        </div>
                        <div>
                            <label></label>
                            <input type="submit" value="Зарегистрироваться" class="btn btn-outline-dark"/>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </section>
</div>

